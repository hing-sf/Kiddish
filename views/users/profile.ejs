          <div class="intro-message">
              <h1>Profile</h1>
          </div>
        </div>
    </div>
  </div>
</div>

  <div class="container"> 
  	<div class="row">
  		<div class="col-sm-12">
  			<h3>My Awesome Videos</h3>
      		<div>
    	  		<table class="table table-condensed">
      				
      					<tr class="active">
                  <td>Video</td>
      						<td>Title</td>
      						<td>Date Created</td>
      					</tr>
      			
           
              <div class="row">
                <div class="col-xs-12">       
          				<div>
          	      	<% videos.forEach(function(video){ %>
          	  			<tb>
          	  				<tr onclick="document.location = '/users/videos/<%=video.ytVideoId%>'">
                        <td>
                          <img src="https://i.ytimg.com/vi/<%=video.ytVideoId%>/1.jpg">
                        </td>
          	  					<td>
          	  						<%= video.title %>
          	  					</td>
          	  					<td>
          	  						<%= video.createdAt.toDateString()%><span> <%= video.createdAt.getHours()%>:<%= video.createdAt.getMinutes()<10?'0'+ video.createdAt.getMinutes():'' + video.createdAt.getMinutes()%>
          	  					</td>

                        <td>
          					     <form method="POST" action="/users/<%=video.userId%>/videos/<%=video.id%>?_method=delete">
          					       <button type="submit">Delete Video</button>
          					     </form>
                        </td>
          	  				</tr>
          	  			</tb>
          	  			<% }) %>
                  </div>
                </div>  
              </div>                  
          </table>          
        </div>
      </div>
 		</div>
